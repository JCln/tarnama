{
  "compilerOptions": {
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "lib": [
          "es2018",
          "dom"
      ],
      // "module": "commonjs",
      "module": "es2015",
      "moduleResolution": "node",
      "noImplicitAny": false,
      "sourceMap": true,
      "suppressImplicitAnyIndexErrors": true,
      "target": "es5",
      "baseUrl": "src",
      "paths": {
          "@/*": [
              "app/*"
          ]
      }
  }
}

